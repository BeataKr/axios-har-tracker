{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "alwaysStrict": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "noEmitOnError": true,
    "typeRoots": ["./node_modules/@types"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules", "**/*.spec.ts", "jest.config.js"
  ]
}
